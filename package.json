{
  "name": "patnav",
  "version": "1.0.0",
  "productName": "Naviera App",
  "description": "Proyecto ambicion total Naviera",
  "main": "main.js",
  "dependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vite": "^7.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently -k \"vite\" \"electron .\"",
    "build": "vite build",
    "start": "cross-env NODE_ENV=production electron .",
    "dist": "npm run build && electron-builder",
    "build:python": "python -m PyInstaller --onefile --clean --distpath release --workpath build --specpath build script.py"
  },
  "build": {
    "appId": "com.l34n07.navieraapp",
    "productName": "Naviera App",
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "public/**/*",
      "src/assets/**/*"
    ],
    "extraResources": [
      {
        "from": "public/fonts",
        "to": "fonts",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "release/script.exe",
        "to": "script.exe"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/logopng.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/logopng.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/L34N07/PATNav.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/L34N07/PATNav/issues"
  },
  "homepage": "https://github.com/L34N07/PATNav#readme",
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "typescript": "^5.8.3"
  }
}
